<%= link_to show_fav_pet_path(id: pet.id),
            data: { turbo_stream: true } do %>
  <div class="w-54 h-20 bg-red-100 hover:bg-red-200">
    <div class="flex grid grid-cols-12">
      <figure class="col-span-5"><%= image_tag pet.bird.bird_image_url, size: '120x80' %></figure>
      <h2 class="col-span-4 mt-3">
        <%= pet.name %></br>
        <%= "飼い主: #{pet.user.name}" %>
      </h2>
    </div>
  </div>
<% end %>
