<div class="container mx-auto sm:w-11/12 lg:w-11/12">
  <div class="grid grid-cols-12 gap-3">
    <div class="col-span-3">
      <h1 class="mt-10 mb-5"><%= "飼っているインコ" %></h1>
      <% @my_pets.each do |pet| %>
        <%= render 'my_pet_list', { pet: pet } %>
      <% end %>
      <h1 class="mt-10 mb-5"><%= "お気に入りのインコ" %></h1>
      <% @favorite_pets.each do |pet| %>
        <%= render 'fav_pet_list', { pet: pet } %>
      <% end %>
    </div>
    <div class="col-span-9">
      <%= turbo_frame_tag "show_pet_area" %>
    </div>
  </div>
  <div class="container pt-3">
    <div class="row">
      <div class="col-md-10 offset-md-1">
        <h1 class="float-left mb-5"><%= "マイページ" %></h1>
        <%= link_to "プロフィールの編集", edit_profile_path, class: 'btn btn-success float-right' %>
        <table class="table">
          <tr>
            <th scope="row"><%= "名前" %></th>
            <td><%= current_user.name %></td>
          </tr>
          <tr>
            <th scope="row"><%= "Eメール" %></th>
            <td><%= current_user.email %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
