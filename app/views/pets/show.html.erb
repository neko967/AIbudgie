<div class="card card-compact w-96 bg-base-100 shadow-xl">
  <figure><%= image_tag @pet.bird.bird_image_url, class: 'card-img-top', size: '300x200' %></figure>
  <div class="card-body">
    <h2 class="card-title"><%= @pet.name %></h2>
    <h2 class="card-title"><%= "飼い主: #{@pet.user.name}" %></h2>
    <p><%= @pet.bird.description %></p>
    <div class="card-actions justify-end">
      <% if request.referer&.include?("/profile") %>
        <button class="btn btn-primary"><%= link_to "戻る", profile_path %></button>
      <% else %>
        <button class="btn btn-primary"><%= link_to "戻る", pets_path %></button>
      <% end %>
      <% if user_signed_in? && current_user.own?(@pet) %>
        <%= javascript_include_tag "talk_to_bird" %>
        <div id="speech-recognition" data-pet-id="<%= @pet.id %>">
          <button class="btn btn-primary" id="start-stop-btn">話しかける</button>
        </div>
        <button class="btn btn-primary"><%= link_to "お別れをする", pet_path(@pet), data: { turbo_method: :delete, turbo_confirm: "本当にお別れしますか？" }  %></button>
      <% end %>
    </div>
    <div id="transcript"></div>
  </div>
</div>
