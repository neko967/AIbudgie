<%= form_with  model: bird, local: true do |f| %>
  <div class="form-group">
    <%= f.label :bird_type %>
    <%= f.text_field :bird_type, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class:'form-control', rows: 10 %>
  </div>
  <div class="form-group">
    <%= f.label :bird_image %>
    <%= f.file_field :bird_image, onchange: 'previewImage()', class: 'form-control mb-3', accept: 'image/*' %>
    <%= f.hidden_field :bird_image_cache %>
  </div>
  <div class="mt-3 mb-3">
    <%= image_tag bird.bird_image.url, id: 'preview', size: '300x200' %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
